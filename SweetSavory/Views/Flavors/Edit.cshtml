@{
  Layout = "_Layout";
}

@model SweetSavory.Models.Flavor

<h2>EDIT</h2>

<h4>Edit this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" />
}

<p class="fancyBtn">@Html.ActionLink("Back to list", "Index", "Flavors")</p>